<h1>All Questions</h1>
<% @questions.each do |question| %>
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
                <% if question.resolved == "1" %>
                    <p><%= link_to question.title, question %>&nbsp;<span class="resolved text-success">[resolved]</span></p>
                <% else %>
                    <p><%= link_to question.title, question %></p>
                <% end %>
            </h4>
        </div>
    </div>
<% end %>