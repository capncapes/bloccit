<% if @question.resolved == "1" %>
    <h1><%= @question.title %>&nbsp;<span class="resolved text-success">[resolved]</span></h1>
<% else %>
    <h1><%= @question.title %></h1>
<% end %>

<div class="row">
    <div class="col-md-8">
        <p><%= @question.body %></p>
    </div>
    <div class="col-md-2">
        <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
        <%= link_to "Delete", @question, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this question?' } %>
    </div>
</div>